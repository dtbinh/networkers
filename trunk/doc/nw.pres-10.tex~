\begin{frame}
 \frametitle{Közvetítõk}

\begin{block}{}
 \begin{itemize}
	\item	a kommunikációs gráf csúcsaiként funkcionálnak
	\item	a gráf átmérõjét mérik
% 	\item	lokális távolságmérés egyszerre $\approx\log_2 n$ forrásból
	\item	optimalizációs fázisokkal próbálják csökkenteni a hálozat fenntartásához szükséges közvetítõk számát (új felderítõk)

 \end{itemize}

\end{block}

\end{frame}




