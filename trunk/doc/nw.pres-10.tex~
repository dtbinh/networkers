\begin{frame}
	\frametitle{Motiváció}
	\begin{block}{Jelenlegi hálózatok}
		\begin{itemize}
			\item	helyhezkötöttek
			\item	tervezettek
			\item	kiépítés jelentõs idõt vesz igénybe
			\item	nem adaptálódnak az igényekhez
			\item	megbízhatóak/nagy teljesítményûek
			\item	stratégiai szempontból értékesek
		\end{itemize}
	\end{block}

	\begin{block}{Más feladat}
		\begin{itemize}
			\item	gyorsan változó igények
			\item	akár ideiglenes idõtartamra
			\item	lokális információk alapján
		\end{itemize}
	\end{block}

\end{frame}


